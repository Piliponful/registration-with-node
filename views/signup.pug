extends layout

block content
  h1 Sign Up
  p Please register using the form below
  ul.errors
    if errors
      each error in errors
        li.alert.alert-danger= error.msg
  form(action='/users/signup' method='post' enctype='multipart/form-data')
    .form-group
      label(for='name') Name
      input.form-control(type='text' id='name' name='name' placeholder='Enter your name')
    .form-group
      label(for='email') Email
      input.form-control(type='email' id='email' name='email' placeholder='Enter your email')
    .form-group
      label(for='username') username
      input.form-control(type='text' id='username' name='username' placeholder='Enter your username')
    .form-group
      label(for='password') password
      input.form-control(type='password' id='password' name='password' placeholder='Enter your password')
    .form-group
      label(for='password2') Confirm password
      input.form-control(type='password' id='password2' name='password2' placeholder='Confirm your password')
    .form-group
      label(for='profile-img') Profile image
      input.form-control(type='file' id='profile_img' name='profileImg' placeholder='Choose your profile image')
    input(type='submit' name='submit' value='signup').btn.btn-success